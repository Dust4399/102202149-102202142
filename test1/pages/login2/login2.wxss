/* pages/login2/login2.wxss */
/* Page container */
.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f0f0f0;
    padding: 20px;
  }
  
  /* Back button */
  .back-button {
    position: absolute;
    top: 20px;
    left: 20px;
  }
  
  .back-icon {
    width: 24px;
    height: 24px;
  }
  
  /* Welcome text */
  .welcome-text {
    margin-bottom: 40px;
    text-align: left;
    width: 100%;
  }
  
  .greeting {
    font-size: 24px;
    font-weight: bold;
    color: #000;
  }
  
  .welcome-msg {
    font-size: 16px;
    color: #666;
    margin-top: 10px;
  }
  
  /* Login form */
  .login-form {
    width: 100%;
    background-color: #e0e0e0;
    padding: 20px;
    border-radius: 10px;
  }
  
  .input {
    display: block;
    width: 100%;
    padding: 10px;
    margin-bottom: 15px;
    border-radius: 5px;
    border: 1px solid #ccc;
    background-color: #fff;
  }
  
  .login-button {
    width: 100%;
    height: 40px;
    background-color: #8b8b8b;
    color: #fff;
    border-radius: 5px;
  }
  
  /* Registration and password recovery links */
  .links {
    margin-top: 15px;
    text-align: center;
    color: #666;
  }

  /* Indicator circles */
  .indicator-container {
    margin-top: 40px;
    display: flex;
    justify-content: center;
  }
  
  .indicator {
    width: 15px;
    height: 15px;
    background-color: #ccc;
    border-radius: 50%;
    margin: 0 5px;
  }
  