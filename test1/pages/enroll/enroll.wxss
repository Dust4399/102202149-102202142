/* pages/enroll/enroll.wxss */
/* Page container */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f0f0f0;
  padding: 20px;
}

/* Header */
.header {
  width: 100%;
  background-color: #7b5dcf;
  padding: 20px 0;
  border-radius: 12px;
  text-align:center;
}

.header-title {
  font-size: 24px;
  color: #fff;
  font-weight: bold;
}

/* Registration form */
.registration-form {
  width: 90%;
  background-color: #e0e0e0;
  padding: 20px;
  border-radius: 10px;
}

.input {
  display: block;
  width: 90%;
  padding: 10px;
  margin-bottom: 15px;
  border-radius: 5px;
  border: 1px solid #ccc;
  background-color: #fff;
}

.register-button {
  width: 100%;
  height: 40px;
  background-color: #8b8b8b;
  color: #fff;
  border-radius: 5px;
  text-align: center;
  
}

/* Indicator circles */
.indicator-container {
  margin-top: 40px;
  display: flex;
  justify-content: center;
}

.indicator {
  width: 15px;
  height: 15px;
  background-color: #ccc;
  border-radius: 50%;
  margin: 0 5px;
}
