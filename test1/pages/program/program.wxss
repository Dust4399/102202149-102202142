.page {
  padding: 20rpx;
}

.header {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.tabs {
  display: flex;
  margin-bottom: 20rpx;
}

.tab-item {
  padding: 10rpx 20rpx;
  border: 1px solid #ccc;
  margin-right: 10rpx;
  border-radius: 5rpx;
}

.active {
  background-color: #07c160;
  color: #fff;
}

.project-item {
  border: 1px solid #ddd;
  padding: 15rpx;
  margin-bottom: 15rpx;
  border-radius: 5rpx;
}

.bottom-nav {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.nav-item {
  text-align: center;
}