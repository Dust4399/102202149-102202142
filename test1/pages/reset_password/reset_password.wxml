<!--pages/reset_password/reset_password.wxml-->
<view class="container">
  <!-- Back button -->
  <view class="back-button" bindtap="goBack">
    <image class="back-icon" src="/images/back.png"></image>
  </view>

  <!-- Header with Registration title -->
  <view class="header">
    <text class="header-title">找回密码</text>
  </view>

  <!-- Registration form -->
  <view class="registration-form">
    <view class="input-group">
      <view class="icon-placeholder"></view>
      <input class="input" type="text" placeholder="请输入学号" bindinput="bindStudentNumber"/>
    </view>
    
    <view class="input-group">
      <view class="icon-placeholder"></view>
      <input class="input" type="password" placeholder="输入密码" bindinput="bindPassword"/>
    </view>
    
    <view class="input-group">
      <view class="icon-placeholder"></view>
      <input class="input" type="password" placeholder="确认密码" bindinput="bindConfirmPassword"/>
    </view>

    <view class="input-group">
      <view class="icon-placeholder"></view>
      <input class="input" type="email" placeholder="输入邮箱用于找回密码" bindinput="bindEmail"/>
    </view>-

    <!-- Register button -->
    <button class="register-button" bindtap="register">立即找回</button>
  </view>

  <!-- Indicator circles (for design) -->
  <view class="indicator-container">
    <view class="indicator"></view>
    <view class="indicator"></view>
    <view class="indicator"></view>
  </view>
</view>
