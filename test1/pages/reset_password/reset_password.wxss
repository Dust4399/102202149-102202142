/* pages/reset_password/reset_password.wxss */

/* Page container */
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f0f0f0;
  padding: 20px;
}

/* Back button */
.back-button {
  position: absolute;
  top: 20px;
  left: 20px;
}

.back-icon {
  width: 24px;
  height: 24px;
}

/* Header */
.header {
  width: 100%;
  background-color: #7b5dcf;
  padding: 20px 0;
  text-align: center;
}

.header-title {
  font-size: 24px;
  color: #fff;
  font-weight: bold;
}

/* Registration form */
.registration-form {
  width: 100%;
  background-color: #e0e0e0;
  padding: 20px;
  border-radius: 10px;
}

/* Input group */
.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  background-color: #ccc;
  border-radius: 5px;
}

.icon-placeholder {
  width: 20px;
  height: 20px;
  background-color: #666;
  margin: 10px;
  border-radius: 50%;
}

.input {
  display: block;
  flex-grow: 1;
  padding: 10px;
  border: none;
  background-color: transparent;
}

/* Register button */
.register-button {
  width: 100%;
  height: 40px;
  background-color: #8b8b8b;
  color: #fff;
  border-radius: 5px;
  text-align: center;
}

/* Indicator circles */
.indicator-container {
  margin-top: 40px;
  display: flex;
  justify-content: center;
}

.indicator {
  width: 15px;
  height: 15px;
  background-color: #ccc;
  border-radius: 50%;
  margin: 0 5px;
}
